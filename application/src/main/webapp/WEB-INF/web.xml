<?xml version="1.0" encoding="UTF-8"?>

<web-app	version="3.0"
			xmlns="http://java.sun.com/xml/ns/javaee" 
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://java.sun.com/xml/ns/javaee	http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<display-name>Simple web application</display-name>
	<welcome-file-list>
	    <welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>SignUpServlet</servlet-name>
		<servlet-class>ma.ensias.servlets.SignUpServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>SignUpServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>Connexion</servlet-name>
	<servlet-class>ma.ensias.servlets.Connexion</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>Connexion</servlet-name>
	<url-pattern>/connexion</url-pattern>
	</servlet-mapping>
	
	<servlet>
	<servlet-name>TopicServlet</servlet-name>
	<servlet-class>ma.ensias.servlets.TopicServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
	<servlet-name>TopicServlet</servlet-name>
	<url-pattern>/topic</url-pattern>
	</servlet-mapping>

</web-app>
